<div id="step-{{step}}">
	<form class="form-horizontal first">
	  <div class="control-group numerator">
	    {{#ifNotEquial step 2}}
		<label class="control-label" for="numerator-1">{{leftFractionNumerator}}</label>
		{{/ifNotEquial}}
		{{#ifGreateThan step 0}}
		<div class="controls">
		  <input type="text" class="input-mini" name="p1n" id="numerator-{{step}}-1" size="2" maxlength="2">
		</div>
		{{/ifGreateThan}}
	  </div>
	  <div class="control-group">
	    {{#ifNotEquial step 2}}
		<label class="control-label" for="denominator-{{step}}-1">{{leftFractionDenominator}}</label>
		{{/ifNotEquial}}
		{{#ifGreateThan step 0}}
		<div class="controls">
		  <input type="text" class="input-mini" name="p1d" id="denominator-{{step}}-1" size="2" maxlength="2">
		</div>
		{{/ifGreateThan}}
	  </div>
	</form>
	
	<div id="operationSign" class="operation operation-step-{{step}}">{{operationSign}}</div>
	
	<form class="form-horizontal second">
	  <div class="control-group numerator">
		 {{#ifNotEquial step 2}}
		<label class="control-label" for="numerator-{{step}}-2">{{rightFractionNumerator}}</label>
		{{/ifNotEquial}}
		{{#ifGreateThan step 0}}
		<div class="controls">
		  <input type="text" class="input-mini" name="p2n" id="numerator-{{step}}-2" size="2" maxlength="2">
		</div>
		{{/ifGreateThan}}
	  </div>
	  <div class="control-group">
		 {{#ifNotEquial step 2}}
		<label class="control-label" for="denominator-{{step}}-2">{{rightFractionDenominator}}</label>
		{{/ifNotEquial}}
		{{#ifGreateThan step 0}}
		<div class="controls">
		  <input type="text" class="input-mini" name="p2d" id="denominator-{{step}}-2" size="2" maxlength="2">
		</div>
		{{/ifGreateThan}}
	  </div>
	</form>
	
	<div id="equialSign" class="operation">{{equialSign}}</div>
	
</div>